@inject IHttpContextAccessor HttpContextAccessor
@inject MobilOfis.Core.IServices.IAuthServices AuthServices
@{
    var userIdClaim = HttpContextAccessor.HttpContext?.User.FindFirst("userId");
    var userName = HttpContextAccessor.HttpContext?.User.Identity?.Name ?? "Kullanıcı";
    var userEmail = HttpContextAccessor.HttpContext?.User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value;
    string? profilePictureUrl = null;

    if (userIdClaim != null && Guid.TryParse(userIdClaim.Value, out var userId))
    {
        var user = await AuthServices.GetUserByIdAsync(userId);
        if (user != null)
        {
            profilePictureUrl = user.ProfilePictureUrl;
            // Update name/email from DB to be sure
            userName = $"{user.FirstName} {user.LastName}";
            userEmail = user.Email;
        }
    }
}

<header class="header">
    <div class="header-left">
        <!-- Mobil Menü Butonu (sadece mobilde görünür) -->
        <button class="btn btn-link mobile-menu-toggle d-md-none" id="mobileMenuToggle" type="button">
            <i class="bi bi-list" style="font-size: 1.5rem;"></i>
        </button>
    </div>
    
    <div class="header-right">

        
        <!-- Kullanıcı Menüsü -->
        <div class="dropdown user-dropdown">
            <button class="btn user-profile-btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="@(string.IsNullOrEmpty(profilePictureUrl) ? "/images/default-avatar.png" : profilePictureUrl)" 
                     alt="Avatar" class="avatar header-profile-img" 
                     onerror="this.src='https://ui-avatars.com/api/?name=@Uri.EscapeDataString(userName)&background=667eea&color=fff&size=128'">
                <div class="user-info d-none d-md-block">
                    <span class="user-name">@userName</span>
                    <span class="user-email">@userEmail</span>
                </div>
            </button>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <div class="dropdown-item-text">
                        <div class="fw-bold">@userName</div>
                        <small class="text-muted">@userEmail</small>
                    </div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                        <i class="bi bi-person me-2"></i>Profilim
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <a class="dropdown-item text-danger" asp-controller="Auth" asp-action="Logout">
                        <i class="bi bi-box-arrow-right me-2"></i>Çıkış Yap
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>

