@model RegisterViewModel
@{
    ViewData["Title"] = "Kayıt Ol";
    Layout = "_LoginLayout";
}

<div class="login-container">
    <div class="row min-vh-100">
        <div class="col-lg-6 d-none d-lg-flex bg-primary text-white align-items-center justify-content-center">
            <div class="text-center">
                <h1 class="display-4 fw-bold">MobilOfis</h1>
                <p class="lead">Ekibinizle Daha Verimli Çalışın</p>
            </div>
        </div>
        
        <div class="col-lg-6 d-flex align-items-center justify-content-center">
            <div class="login-form-wrapper w-75">
                <h2 class="mb-4">Hesap Oluşturun</h2>
                
                <form asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label">Ad</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label">Soyad</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">Email Adresi</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="PhoneNumber" class="form-label">Telefon Numarası</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Şifre</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">Şifre Tekrar</label>
                        <input asp-for="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    
                    <div class="form-check mb-4">
                        <input asp-for="AcceptTerms" class="form-check-input" />
                        <label asp-for="AcceptTerms" class="form-check-label">
                            Kullanım şartlarını kabul ediyorum
                        </label>
                        <span asp-validation-for="AcceptTerms" class="text-danger d-block"></span>
                    </div>
                    
                    <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
                        <i class="bi bi-person-plus me-2"></i> Kayıt Ol
                    </button>
                    
                    <p class="text-center text-muted">
                        Zaten hesabınız var mı? <a asp-action="Login" class="text-decoration-none">Giriş Yap</a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>

