@model EventViewModel
@{
    ViewData["Title"] = "Etkinliği Düzenle";
}

<div class="event-form-container">
    <!-- Başlık -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
        <h2 class="mb-0"><i class="bi bi-pencil me-2"></i>Etkinliği Düzenle</h2>
        <a asp-action="Detail" asp-route-id="@Model.EventId" class="btn btn-outline-secondary w-100 w-md-auto">
            <i class="bi bi-arrow-left me-1"></i>İptal
        </a>
    </div>
    
    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Edit" asp-route-id="@Model.EventId" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="EventId" value="@Model.EventId" />
                        
                        <div class="row g-3">
                            <!-- Etkinlik Başlığı -->
                            <div class="col-12">
                                <label for="title" class="form-label">Etkinlik Başlığı <span class="text-danger">*</span></label>
                                <input type="text" name="Title" id="title" class="form-control" required 
                                       value="@Model.Title">
                                <div class="invalid-feedback">Etkinlik başlığı zorunludur.</div>
                            </div>
                            
                            <!-- Etkinlik Türü -->
                            <div class="col-12 col-md-6">
                                <label for="eventType" class="form-label">Etkinlik Türü <span class="text-danger">*</span></label>
                                <select name="EventType" id="eventType" class="form-select" required>
                                    <option value="">Seçiniz...</option>
                                    <option value="Meeting" selected="@(Model.EventType == "Meeting")">Toplantı</option>
                                    <option value="Training" selected="@(Model.EventType == "Training")">Eğitim</option>
                                    <option value="Social" selected="@(Model.EventType == "Social")">Sosyal Etkinlik</option>
                                    <option value="Other" selected="@(Model.EventType == "Other")">Diğer</option>
                                </select>
                                <div class="invalid-feedback">Etkinlik türü seçimi zorunludur.</div>
                            </div>
                            
                            <!-- Konum -->
                            <div class="col-12 col-md-6">
                                <label for="location" class="form-label">Konum <span class="text-danger">*</span></label>
                                <input type="text" name="Location" id="location" class="form-control" required 
                                       value="@Model.Location">
                                <div class="invalid-feedback">Konum bilgisi zorunludur.</div>
                            </div>
                            
                            <!-- Başlangıç Tarihi ve Saati -->
                            <div class="col-12 col-md-6">
                                <label for="startDate" class="form-label">Başlangıç Tarihi <span class="text-danger">*</span></label>
                                <input type="datetime-local" name="StartTime" id="startDate" class="form-control" required
                                       value="@Model.StartTime.ToString("yyyy-MM-ddTHH:mm")">
                                <div class="invalid-feedback">Başlangıç tarihi zorunludur.</div>
                            </div>
                            
                            <!-- Bitiş Tarihi ve Saati -->
                            <div class="col-12 col-md-6">
                                <label for="endDate" class="form-label">Bitiş Tarihi <span class="text-danger">*</span></label>
                                <input type="datetime-local" name="EndTime" id="endDate" class="form-control" required
                                       value="@Model.EndTime.ToString("yyyy-MM-ddTHH:mm")">
                                <div class="invalid-feedback">Bitiş tarihi zorunludur.</div>
                            </div>
                            
                            <!-- Açıklama -->
                            <div class="col-12">
                                <label for="description" class="form-label">Açıklama <span class="text-danger">*</span></label>
                                <textarea name="Description" id="description" class="form-control" rows="6" required>@Model.Description</textarea>
                                <div class="invalid-feedback">Açıklama zorunludur.</div>
                            </div>
                            

                            

                            
                            <!-- Butonlar -->
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-between">
                                    <button type="button" class="btn btn-danger" onclick="eventFunctions.deleteEvent('@Model.EventId')">
                                        <i class="bi bi-trash me-1"></i>Etkinliği Sil
                                    </button>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Detail" asp-route-id="@Model.EventId" class="btn btn-secondary">
                                            <i class="bi bi-x-lg me-1"></i>İptal
                                        </a>
                                        <button type="submit" class="btn btn-primary">
                                            <i class="bi bi-check-lg me-1"></i>Değişiklikleri Kaydet
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/events.js"></script>
    @Html.AntiForgeryToken()
}

