@model EventViewModel
@{
    ViewData["Title"] = "Yeni Etkinlik";
}

<div class="event-form-container">
    <!-- Başlık -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
        <h2 class="mb-0"><i class="bi bi-plus-circle me-2"></i>Yeni Etkinlik Oluştur</h2>
        <a asp-action="Index" class="btn btn-outline-secondary w-100 w-md-auto">
            <i class="bi bi-arrow-left me-1"></i>İptal
        </a>
    </div>
    
    <div class="row">
        <div class="col-12 col-lg-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data" id="eventForm">
                        @Html.AntiForgeryToken()
                        
                        <div class="row g-3">
                            <!-- Etkinlik Başlığı -->
                            <div class="col-12">
                                <label for="title" class="form-label">Etkinlik Başlığı <span class="text-danger">*</span></label>
                                <input type="text" name="Title" id="title" class="form-control" required 
                                       placeholder="Örn: Şirket Pikniği 2025">
                                <div class="invalid-feedback">Etkinlik başlığı zorunludur.</div>
                            </div>
                            
                            <!-- Etkinlik Türü -->
                            <div class="col-12 col-md-6">
                                <label for="eventType" class="form-label">Etkinlik Türü <span class="text-danger">*</span></label>
                                <select name="EventType" id="eventType" class="form-select" required>
                                    <option value="">Seçiniz...</option>
                                    <option value="Meeting">Toplantı</option>
                                    <option value="Training">Eğitim</option>
                                    <option value="Social">Sosyal Etkinlik</option>
                                    <option value="Other">Diğer</option>
                                </select>
                                <div class="invalid-feedback">Etkinlik türü seçimi zorunludur.</div>
                            </div>
                            
                            <!-- Konum -->
                            <div class="col-12 col-md-6">
                                <label for="location" class="form-label">Konum <span class="text-danger">*</span></label>
                                <input type="text" name="Location" id="location" class="form-control" required 
                                       placeholder="Örn: Ofis Toplantı Salonu">
                                <div class="invalid-feedback">Konum bilgisi zorunludur.</div>
                            </div>
                            
                            <!-- Başlangıç Tarihi ve Saati -->
                            <div class="col-12 col-md-6">
                                <label for="startDate" class="form-label">Başlangıç Tarihi <span class="text-danger">*</span></label>
                                <input type="datetime-local" name="StartDate" id="startDate" class="form-control" required>
                                <div class="invalid-feedback">Başlangıç tarihi zorunludur.</div>
                            </div>
                            
                            <!-- Bitiş Tarihi ve Saati -->
                            <div class="col-12 col-md-6">
                                <label for="endDate" class="form-label">Bitiş Tarihi <span class="text-danger">*</span></label>
                                <input type="datetime-local" name="EndDate" id="endDate" class="form-control" required>
                                <div class="invalid-feedback">Bitiş tarihi zorunludur.</div>
                            </div>
                            
                            <!-- Açıklama -->
                            <div class="col-12">
                                <label for="description" class="form-label">Açıklama <span class="text-danger">*</span></label>
                                <textarea name="Description" id="description" class="form-control" rows="6" required 
                                          placeholder="Etkinlik hakkında detaylı bilgi veriniz..."></textarea>
                                <div class="invalid-feedback">Açıklama zorunludur.</div>
                            </div>
                            

                            
                            <!-- Butonlar -->
                            <div class="col-12">
                                <hr>
                                <div class="d-flex justify-content-end gap-2">
                                    <a asp-action="Index" class="btn btn-secondary">
                                        <i class="bi bi-x-lg me-1"></i>İptal
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-lg me-1"></i>Etkinliği Oluştur
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/events.js"></script>
    <script>
        // Set minimum datetime to now
        document.addEventListener('DOMContentLoaded', function() {
            const now = new Date();
            now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
            const dateTimeLocal = now.toISOString().slice(0, 16);
            document.getElementById('startDate').min = dateTimeLocal;
            document.getElementById('endDate').min = dateTimeLocal;
        });
    </script>
}

