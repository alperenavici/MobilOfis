@model SalaryViewModel
@{
    ViewData["Title"] = "Maaş Bilgilerim";
}

<div class="salary-container">
    <form id="salaryAntiForgery" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>
    <!-- Sayfa Başlığı -->
    <div class="mb-4">
        <h2><i class="bi bi-cash-stack me-2"></i>Maaş Bilgilerim</h2>
        <p class="text-muted">Maaş bilgilerinizi ve bordro geçmişinizi görüntüleyebilirsiniz</p>
    </div>
    
    <div class="row">
        <div class="col-12 col-lg-8 mb-4 mb-lg-0">
            <!-- Güncel Maaş -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Güncel Maaş Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-12 col-sm-6">
                            <div class="text-center p-3 p-md-4 bg-light rounded">
                                <small class="text-muted d-block mb-2">Brüt Maaş</small>
                                <h3 class="mb-0 text-primary h4">@Model.GrossSalary.ToString("N2") ₺</h3>
                            </div>
                        </div>
                        <div class="col-12 col-sm-6">
                            <div class="text-center p-3 p-md-4 bg-light rounded">
                                <small class="text-muted d-block mb-2">Net Maaş</small>
                                <h3 class="mb-0 text-success h4">@Model.NetSalary.ToString("N2") ₺</h3>
                            </div>
                        </div>
                        @if (Model.Bonus.HasValue && Model.Bonus.Value > 0)
                        {
                            <div class="col-12 col-sm-6">
                                <div class="text-center p-3 p-md-4 bg-light rounded">
                                    <small class="text-muted d-block mb-2">Prim</small>
                                    <h3 class="mb-0 text-info h4">@Model.Bonus.Value.ToString("N2") ₺</h3>
                                </div>
                            </div>
                        }
                        @if (Model.Deductions.HasValue && Model.Deductions.Value > 0)
                        {
                            <div class="col-12 col-sm-6">
                                <div class="text-center p-3 p-md-4 bg-light rounded">
                                    <small class="text-muted d-block mb-2">Kesintiler</small>
                                    <h3 class="mb-0 text-danger h4">@Model.Deductions.Value.ToString("N2") ₺</h3>
                                </div>
                            </div>
                        }
                    </div>
                    
                    @if (Model.EffectiveDate.HasValue)
                    {
                        <div class="mt-3 text-center">
                            <small class="text-muted">Geçerlilik Tarihi: @Model.EffectiveDate.Value.ToString("dd MMMM yyyy")</small>
                        </div>
                    }
                </div>
            </div>
            

            @if (Model.CanManageTeam)
            {
                <div class="card mt-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Takım Maaşları</h5>
                        <span class="badge bg-primary">Yönetici Modu</span>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm align-middle">
                                <thead>
                                    <tr>
                                        <th>Çalışan</th>
                                        <th class="d-none d-md-table-cell">Departman</th>
                                        <th>Maaş</th>
                                        <th class="d-none d-md-table-cell">Son Güncelleme</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var member in Model.TeamMembers)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex flex-column">
                                                    <strong>@member.UserName</strong>
                                                    <small class="text-muted">@member.JobTitle</small>
                                                    <small class="text-muted d-md-none">@member.DepartmentName</small>
                                                </div>
                                            </td>
                                            <td class="d-none d-md-table-cell">@member.DepartmentName</td>
                                            <td><strong>@member.Salary.ToString("N2") ₺</strong></td>
                                            <td class="d-none d-md-table-cell">
                                                @if (member.LastUpdated.HasValue)
                                                {
                                                    <small class="text-muted">@member.LastUpdated.Value.ToString("dd.MM.yyyy")</small>
                                                }
                                                else
                                                {
                                                    <small class="text-muted">-</small>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <button type="button" class="btn btn-sm btn-outline-primary"
                                                        onclick="openTeamSalaryModal('@member.UserId', '@member.UserName', @member.Salary.ToString(System.Globalization.CultureInfo.InvariantCulture))">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <small class="text-muted">Yalnızca yöneticisi olduğunuz çalışanlar listelenir.</small>
                    </div>
                </div>
            }
        </div>
        
        <div class="col-lg-4">
            <!-- Özet Bilgiler -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Özet</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted d-block">Toplam Ödeme (Bu Yıl)</small>
                        <h4 class="text-primary">
                            @if (Model.PaymentHistory != null)
                            {
                                @Model.PaymentHistory.Where(p => p.Period.Year == DateTime.Now.Year).Sum(p => p.NetSalary).ToString("N2") 
                            }
                            else
                            {
                                @(0.ToString("N2"))
                            } ₺
                        </h4>
                    </div>
                    <hr>
                    <div class="mb-3">
                        <small class="text-muted d-block">Toplam Prim (Bu Yıl)</small>
                        <h4 class="text-success">
                            @if (Model.PaymentHistory != null)
                            {
                                @Model.PaymentHistory.Where(p => p.Period.Year == DateTime.Now.Year).Sum(p => p.Bonus ?? 0).ToString("N2")
                            }
                            else
                            {
                                @(0.ToString("N2"))
                            } ₺
                        </h4>
                    </div>
                    <hr>
                    <div>
                        <small class="text-muted d-block">Ortalama Net Maaş</small>
                        <h4 class="text-info">
                            @if (Model.PaymentHistory != null && Model.PaymentHistory.Any())
                            {
                                @Model.PaymentHistory.Average(p => p.NetSalary).ToString("N2")
                            }
                            else
                            {
                                @(0.ToString("N2"))
                            } ₺
                        </h4>
                    </div>
                </div>
            </div>
            
            <!-- Maaş Trendi -->
            @if (Model.PaymentHistory != null && Model.PaymentHistory.Count() >= 3)
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Maaş Trendi</h5>
                    </div>
                    <div class="card-body">
                        <canvas id="salaryTrendChart" 
                                data-months='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PaymentHistory.TakeLast(6).Select(p => p.Period.ToString("MMM yyyy"))))' 
                                data-amounts='@Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.PaymentHistory.TakeLast(6).Select(p => p.NetSalary)))'></canvas>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

<!-- Team Salary Modal -->
<div class="modal fade" id="teamSalaryModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Maaş Güncelle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="teamSalaryForm">
                    <input type="hidden" id="teamUserId">
                    <div class="mb-3">
                        <label class="form-label">Çalışan</label>
                        <input type="text" id="teamUserName" class="form-control" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Yeni Maaş (Brüt)</label>
                        <input type="number" id="teamNewSalary" class="form-control" min="0" step="0.01" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" onclick="saveTeamSalary()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script src="~/js/dashboard.js"></script>
    <script>
        const antiForgeryToken = document.querySelector('#salaryAntiForgery input[name="__RequestVerificationToken"]')?.value;

        function openTeamSalaryModal(userId, userName, currentSalary) {
            document.getElementById('teamUserId').value = userId;
            document.getElementById('teamUserName').value = userName;
            document.getElementById('teamNewSalary').value = currentSalary;

            const modal = new bootstrap.Modal(document.getElementById('teamSalaryModal'));
            modal.show();
        }

        async function saveTeamSalary() {
            const userId = document.getElementById('teamUserId').value;
            const newSalary = parseFloat(document.getElementById('teamNewSalary').value);

            if (!newSalary || newSalary <= 0) {
                showToast('Geçerli bir maaş giriniz', 'warning');
                return;
            }

            try {
                const response = await fetch('/api/Salary/update', {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': antiForgeryToken || ''
                    },
                    body: JSON.stringify({
                        userId: userId,
                        newSalary: newSalary
                    })
                });

                if (response.ok) {
                    showToast('Maaş güncellendi', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('teamSalaryModal'))?.hide();
                    setTimeout(() => window.location.reload(), 1200);
                } else {
                    const data = await response.json();
                    showToast(data.message || 'Güncelleme başarısız oldu', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Bir hata oluştu', 'error');
            }
        }
    </script>
}

