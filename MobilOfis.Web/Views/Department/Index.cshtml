@model List<DepartmentViewModel>
@{
    ViewData["Title"] = "Departmanlar";
}

<div class="department-management-container">
    <!-- Sayfa Başlığı -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building me-2"></i>Departmanlar</h2>
        @if (User.IsInRole("HR") || User.IsInRole("Admin"))
        {
            <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createDepartmentModal">
                <i class="bi bi-plus-lg me-2"></i>Yeni Departman
            </button>
        }
    </div>
    
    <!-- Arama -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-8">
                    <input type="text" id="searchDepartment" class="form-control" placeholder="Departman ara...">
                </div>
                <div class="col-md-4">
                    <select id="sortBy" class="form-select">
                        <option value="name">İsme Göre</option>
                        <option value="employees">Çalışan Sayısına Göre</option>
                    </select>
                </div>
            </div>
        </div>
    </div>
    
    @if (Model != null && Model.Any())
    {
        <!-- Departman Kartları -->
        <div class="row g-4" id="departmentGrid">
            @foreach (var department in Model)
            {
                <div class="col-md-6 col-lg-4 department-card-item">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h5 class="card-title mb-1">@department.Name</h5>
                                    @if (!string.IsNullOrEmpty(department.ManagerName))
                                    {
                                        <small class="text-muted">
                                            <i class="bi bi-person-badge me-1"></i>@department.ManagerName
                                        </small>
                                    }
                                </div>
                                <span class="badge bg-primary fs-6">
                                    @department.EmployeeCount
                                    <i class="bi bi-people ms-1"></i>
                                </span>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(department.Description))
                            {
                                <p class="card-text text-muted small mb-3">
                                    @(department.Description.Length > 100 ? department.Description.Substring(0, 100) + "..." : department.Description)
                                </p>
                            }
                            
                            <div class="d-flex gap-2 mt-auto">
                                <a asp-action="Detail" asp-route-id="@department.DepartmentId" class="btn btn-outline-primary btn-sm flex-fill">
                                    <i class="bi bi-eye me-1"></i>Detay
                                </a>
                                @if (User.IsInRole("HR") || User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@department.DepartmentId" class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-body">
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-building"></i>
                    </div>
                    <div class="empty-state-title">Henüz departman bulunmuyor</div>
                    <div class="empty-state-message">Yeni bir departman oluşturmak için yukarıdaki butonu kullanın</div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Create Department Modal -->
@await Html.PartialAsync("_CreateDepartmentModal")

@section Scripts {
    <script>
        // Search functionality
        document.getElementById('searchDepartment')?.addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const departmentCards = document.querySelectorAll('.department-card-item');
            
            departmentCards.forEach(card => {
                const text = card.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    card.style.display = '';
                } else {
                    card.style.display = 'none';
                }
            });
        });
        
        // Sort functionality
        document.getElementById('sortBy')?.addEventListener('change', function(e) {
            const sortBy = e.target.value;
            const grid = document.getElementById('departmentGrid');
            const cards = Array.from(grid.querySelectorAll('.department-card-item'));
            
            cards.sort((a, b) => {
                if (sortBy === 'name') {
                    const nameA = a.querySelector('.card-title').textContent;
                    const nameB = b.querySelector('.card-title').textContent;
                    return nameA.localeCompare(nameB, 'tr');
                } else if (sortBy === 'employees') {
                    const countA = parseInt(a.querySelector('.badge').textContent);
                    const countB = parseInt(b.querySelector('.badge').textContent);
                    return countB - countA;
                }
                return 0;
            });
            
            cards.forEach(card => grid.appendChild(card));
        });
    </script>
}

