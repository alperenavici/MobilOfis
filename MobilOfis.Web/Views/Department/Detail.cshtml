@model DepartmentViewModel
@{
    ViewData["Title"] = Model.Name;
}

<div class="department-detail-container">
    <!-- Başlık -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-building me-2"></i>@Model.Name</h2>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>Geri
            </a>
            @if (User.IsInRole("HR") || User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-outline-primary">
                    <i class="bi bi-pencil me-1"></i>Düzenle
                </a>
            }
        </div>
    </div>
    
    <div class="row">
        <!-- Sol Kolon -->
        <div class="col-lg-8">
            <!-- Departman Bilgileri -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Departman Bilgileri</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label text-muted">Departman Adı</label>
                            <p class="fw-bold">@Model.Name</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Departman Yöneticisi</label>
                            <p class="fw-bold">
                                @if (!string.IsNullOrEmpty(Model.ManagerName))
                                {
                                    <i class="bi bi-person-badge me-1"></i>@Model.ManagerName
                                }
                                else
                                {
                                    <span class="text-muted">Atanmamış</span>
                                }
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Çalışan Sayısı</label>
                            <p class="fw-bold">
                                <span class="badge bg-primary fs-6">
                                    @Model.EmployeeCount <i class="bi bi-people ms-1"></i>
                                </span>
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label text-muted">Oluşturulma Tarihi</label>
                            <p class="fw-bold">@((Model.CreatedAt?.ToString("dd MMMM yyyy")) ?? "-")</p>
                        </div>
                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <div class="col-12">
                                <label class="form-label text-muted">Açıklama</label>
                                <p>@Model.Description</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            
            <!-- Çalışanlar -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Departman Çalışanları</h5>
                </div>
                <div class="card-body">
                    @if (Model.Employees != null && Model.Employees.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Çalışan</th>
                                        <th>Email</th>
                                        <th>Pozisyon</th>
                                        <th>Rol</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var employee in Model.Employees)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    @if (!string.IsNullOrEmpty(employee.ProfilePictureUrl))
                                                    {
                                                        <img src="@employee.ProfilePictureUrl" alt="@employee.FullName" class="avatar avatar-sm me-2 rounded-circle" style="object-fit: cover;">
                                                    }
                                                    else
                                                    {
                                                        <img src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(employee.FullName)&background=667eea&color=fff" 
                                                             alt="@employee.FullName" class="avatar avatar-sm me-2 rounded-circle">
                                                    }
                                                    <strong>@employee.FullName</strong>
                                                </div>
                                            </td>
                                            <td>@employee.Email</td>
                                            <td>@employee.JobTitle</td>
                                            <td>
                                                <span class="badge bg-secondary">@employee.RoleName</span>
                                            </td>
                                            <td>
                                                <a asp-controller="User" asp-action="Detail" asp-route-id="@employee.UserId" 
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="empty-state">
                            <div class="empty-state-icon">
                                <i class="bi bi-people"></i>
                            </div>
                            <div class="empty-state-title">Bu departmanda henüz çalışan yok</div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <!-- Sağ Kolon -->
        <div class="col-lg-4">
            <!-- İstatistikler -->
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">İstatistikler</h5>
                </div>
                <div class="card-body">
                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Toplam Çalışan</span>
                            <strong class="fs-4 text-primary">@Model.EmployeeCount</strong>
                        </div>
                    </div>
                    <hr>
                    <div class="stat-item mb-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Aktif İzinler</span>
                            <strong class="fs-4 text-warning">@Model.ActiveLeavesCount</strong>
                        </div>
                    </div>
                    <hr>
                    <div class="stat-item">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Yaklaşan Etkinlikler</span>
                            <strong class="fs-4 text-info">@Model.UpcomingEventsCount</strong>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Hızlı İşlemler -->
            @if (User.IsInRole("HR") || User.IsInRole("Admin"))
            {
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Hızlı İşlemler</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a asp-controller="User" asp-action="Create" asp-route-departmentId="@Model.DepartmentId" 
                               class="btn btn-outline-primary">
                                <i class="bi bi-person-plus me-1"></i>Çalışan Ekle
                            </a>
                            <a asp-action="Edit" asp-route-id="@Model.DepartmentId" class="btn btn-outline-secondary">
                                <i class="bi bi-pencil me-1"></i>Departmanı Düzenle
                            </a>
                            <button type="button" class="btn btn-outline-danger" onclick="deleteDepartment('@Model.DepartmentId')">
                                <i class="bi bi-trash me-1"></i>Departmanı Sil
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Html.AntiForgeryToken()
    <script>
        async function deleteDepartment(departmentId) {
            if (!confirm('Bu departmanı silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.')) {
                return;
            }
            
            try {
                const response = await fetch(`/Department/Delete/${departmentId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]')?.value
                    }
                });
                
                if (response.ok) {
                    showToast('Departman silindi', 'success');
                    setTimeout(() => {
                        window.location.href = '/Department/Index';
                    }, 1500);
                } else {
                    showToast('İşlem başarısız oldu', 'error');
                }
            } catch (error) {
                console.error('Error:', error);
                showToast('Bir hata oluştu', 'error');
            }
        }
    </script>
}

