@model List<NotificationViewModel>
@{
    ViewData["Title"] = "Bildirimler";
}

<div class="notification-container">
    <!-- Header -->
    <div class="notification-header">
        <div class="d-flex align-items-center gap-3">
            <div class="bg-white p-2 rounded-3 border shadow-sm">
                <i class="bi bi-bell-fill text-primary fs-4"></i>
            </div>
            <div>
                <h2>Bildirimler</h2>
                <p class="text-muted small mb-0">Tüm aktiviteleriniz ve güncellemeleriniz</p>
            </div>
        </div>
        
        @if (Model != null && Model.Any(n => !n.IsRead))
        {
            <button class="btn btn-primary mark-all-as-read-btn shadow-sm">
                <i class="bi bi-check2-all me-2"></i>Tümünü Okundu İşaretle
            </button>
        }
    </div>
    
@{
    var status = Context.Request.Query["status"].ToString();
    var startDate = Context.Request.Query["startDate"].ToString();
    var activeFilter = "all";
    if (status == "unread") activeFilter = "unread";
    else if (status == "read") activeFilter = "read";
    else if (!string.IsNullOrEmpty(startDate)) activeFilter = "today";
}

    <!-- Filters -->
    <div class="notification-filters shadow-sm">
        <button type="button" class="notification-filter-btn @(activeFilter == "all" ? "active" : "")" data-notification-filter="all">
            <i class="bi bi-grid me-2"></i>Tümü
        </button>
        <button type="button" class="notification-filter-btn @(activeFilter == "unread" ? "active" : "")" data-notification-filter="unread">
            <i class="bi bi-circle-fill text-primary me-2" style="font-size: 0.6rem;"></i>Okunmamış
        </button>
        <button type="button" class="notification-filter-btn @(activeFilter == "read" ? "active" : "")" data-notification-filter="read">
            <i class="bi bi-check-circle me-2"></i>Okunmuş
        </button>
        <button type="button" class="notification-filter-btn @(activeFilter == "today" ? "active" : "")" data-notification-filter="today">
            <i class="bi bi-calendar-event me-2"></i>Bugün
        </button>
    </div>
    
    <!-- List -->
    @if (Model != null && Model.Any())
    {
        <div class="notification-list">
            @foreach (var notification in Model)
            {
                <div class="notification-card @(notification.IsRead ? "" : "unread")" data-notification-id="@notification.NotificationId">
                    <div class="notification-icon-box @notification.TypeColor.ToLower()">
                        <i class="bi bi-@notification.TypeIcon"></i>
                    </div>
                    
                    <div class="notification-content-wrapper">
                        <div class="notification-title-row">
                            <h5 class="notification-card-title">
                                @(notification.RelatedEntityType ?? "Sistem Bildirimi")
                            </h5>
                            <span class="notification-time-badge">
                                <i class="bi bi-clock me-1"></i>@GetRelativeTime(notification.SendDate)
                            </span>
                        </div>
                        
                        <p class="notification-card-message">
                            @notification.Message
                        </p>
                        
                        @if (!notification.IsRead)
                        {
                            <div class="notification-actions-row">
                                <button class="action-btn mark-read-btn mark-as-read-btn" data-notification-id="@notification.NotificationId">
                                    <i class="bi bi-check2 me-1"></i>Okundu İşaretle
                                </button>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-notification-state shadow-sm">
            <div class="empty-icon">
                <i class="bi bi-bell-slash"></i>
            </div>
            <div class="empty-text">Henüz bildiriminiz yok</div>
            <div class="empty-subtext">Yeni bildirimler geldiğinde burada listelenecektir.</div>
        </div>
    }
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/notifications.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/notifications.js"></script>
    @Html.AntiForgeryToken()
}

@functions {
    string GetRelativeTime(DateTime dateTime)
    {
        var diff = DateTime.Now - dateTime;
        
        if (diff.TotalMinutes < 1) return "Az önce";
        if (diff.TotalMinutes < 60) return $"{(int)diff.TotalMinutes} dakika önce";
        if (diff.TotalHours < 24) return $"{(int)diff.TotalHours} saat önce";
        if (diff.TotalDays < 7) return $"{(int)diff.TotalDays} gün önce";
        
        return dateTime.ToString("dd MMMM yyyy");
    }
}

