@model MobilOfis.Web.Models.ViewModels.FeedWidgetViewModel

@{
    var createUrl = Url.Action("Create", "Post");
}

<div class="card create-post-card mb-4">
    <div class="card-body">
        <form class="js-feed-form" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <div class="d-flex gap-3">
                <div class="create-post-card__avatar">
                    @* Placeholder for user avatar - ideally passed via ViewModel or ViewComponent *@
                    <div class="avatar avatar-md bg-light text-primary rounded-circle d-flex align-items-center justify-content-center">
                        <i class="bi bi-person-fill fs-5"></i>
                    </div>
                </div>
                <div class="flex-grow-1">
                    <textarea name="Content"
                              class="form-control border-0 bg-light mb-2"
                              rows="@Model.TextareaRows"
                              maxlength="1000"
                              placeholder="@Model.Placeholder"
                              style="resize: none;"></textarea>
                    
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="create-post-card__actions">
                            <label class="btn btn-light btn-sm rounded-pill text-muted mb-0">
                                <i class="bi bi-image text-success me-1"></i>
                                Fotoğraf
                                <input type="file" name="Image" accept="image/*" hidden class="js-feed-image-input" />
                            </label>
                            <span class="ms-2 text-muted small js-feed-selected-image"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm px-4 rounded-pill">
                            Paylaş
                        </button>
                    </div>
                </div>
            </div>
            <div class="create-post-card__status js-feed-status mt-2 small text-muted"></div>
        </form>
    </div>
</div>
