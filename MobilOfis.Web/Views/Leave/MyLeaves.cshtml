@model LeaveListViewModel
@{
    ViewData["Title"] = "İzinlerim";
}

<div class="leave-management-container">
    <!-- Sayfa Başlığı ve Yeni İzin Butonu -->
    <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mb-4 gap-2">
        <h2 class="mb-0"><i class="bi bi-calendar-check me-2"></i>İzinlerim</h2>
        <button class="btn btn-primary w-100 w-md-auto" data-bs-toggle="modal" data-bs-target="#createLeaveModal">
            <i class="bi bi-plus-lg me-2"></i>Yeni İzin Talebi
        </button>
    </div>
    
    <!-- İzin Hakkı Göstergesi -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="row text-center">
                <div class="col-12 col-sm-4 mb-3 mb-sm-0">
                    <h3 class="text-primary mb-1">@Model.RemainingLeaveDays</h3>
                    <p class="text-muted mb-0">Kalan İzin Günü</p>
                </div>
                <div class="col-12 col-sm-4 mb-3 mb-sm-0">
                    <h3 class="text-danger mb-1">@Model.UsedLeaveDays</h3>
                    <p class="text-muted mb-0">Kullanılan</p>
                </div>
                <div class="col-12 col-sm-4">
                    <h3 class="text-secondary mb-1">@Model.TotalLeaveDays</h3>
                    <p class="text-muted mb-0">Toplam Hak</p>
                </div>
            </div>
            <div class="progress" style="height: 25px;">
                <div class="progress-bar bg-success" role="progressbar" 
                     style="width: @((Model.RemainingLeaveDays * 100.0 / (Model.TotalLeaveDays > 0 ? Model.TotalLeaveDays : 1)))%">
                    %@((int)(Model.RemainingLeaveDays * 100.0 / (Model.TotalLeaveDays > 0 ? Model.TotalLeaveDays : 1))) Kaldı
                </div>
            </div>
        </div>
    </div>
    
    <!-- Filtreler -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="MyLeaves" method="get" class="row g-3" id="leaveFilterForm">
                <div class="col-12 col-md-3">
                    <label class="form-label">Durum</label>
                    <select class="form-select" asp-for="Filters.Status">
                        <option value="">Tümü</option>
                        <option value="Pending">Bekliyor</option>
                        <option value="ManagerApproved">Manager Onaylı</option>
                        <option value="Approved">Onaylandı</option>
                        <option value="Rejected">Reddedildi</option>
                    </select>
                </div>
                <div class="col-12 col-md-3">
                    <label class="form-label">İzin Türü</label>
                    <select class="form-select" asp-for="Filters.LeavesType">
                        <option value="">Tümü</option>
                        <option value="YillikUcretliIzin">Yıllık Ücretli İzin</option>
                        <option value="HastalikIzni">Hastalık İzni</option>
                        <option value="EvlilikIzni">Evlilik İzni</option>
                        <option value="BabalikIzni">Babalık İzni</option>
                        <option value="OlumIzni">Ölüm İzni</option>
                        <option value="UcretsizIzin">Ücretsiz İzin</option>
                    </select>
                </div>
                <div class="col-12 col-md-2">
                    <label class="form-label">Yıl</label>
                    <select class="form-select" asp-for="Filters.Year">
                        <option value="">Tümü</option>
                        <option value="@DateTime.Now.Year">@DateTime.Now.Year</option>
                        <option value="@(DateTime.Now.Year - 1)">@(DateTime.Now.Year - 1)</option>
                        <option value="@(DateTime.Now.Year - 2)">@(DateTime.Now.Year - 2)</option>
                    </select>
                </div>
                <div class="col-12 col-md-4 d-flex flex-column flex-md-row align-items-stretch align-items-md-end gap-2">
                    <button type="submit" class="btn btn-primary flex-fill">
                        <i class="bi bi-funnel me-1"></i>Filtrele
                    </button>
                    <button type="button" class="btn btn-outline-secondary flex-fill" onclick="leaveFunctions.clearFilters()">
                        <i class="bi bi-x-lg me-1"></i>Temizle
                    </button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- İzin Geçmişi -->
    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">İzin Geçmişi</h5>
        </div>
        <div class="card-body">
            @if (Model.Leaves != null && Model.Leaves.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>İzin Türü</th>
                                <th>Başlangıç</th>
                                <th>Bitiş</th>
                                <th>Gün Sayısı</th>
                                <th>Talep Tarihi</th>
                                <th>Durum</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var leave in Model.Leaves)
                            {
                                <tr>
                                    <td>@leave.LeavesTypeDisplay</td>
                                    <td>@leave.StartDate.ToShortDateString()</td>
                                    <td>@leave.EndDate.ToShortDateString()</td>
                                    <td>@leave.DayCount</td>
                                    <td>@leave.RequestDate.ToShortDateString()</td>
                                    <td>
                                        <span class="badge badge-@leave.StatusBadgeColor">
                                            @leave.StatusDisplay
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm d-flex flex-column flex-md-row gap-1">
                                            <a asp-action="Detail" asp-route-id="@leave.LeavesId" class="btn btn-outline-primary btn-sm">
                                                <i class="bi bi-eye"></i> <span class="d-md-none">Detay</span>
                                            </a>
                                            @if (leave.Status == "Pending")
                                            {
                                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                                        onclick="leaveFunctions.cancelLeave('@leave.LeavesId')">
                                                    <i class="bi bi-x-lg"></i> <span class="d-md-none">İptal</span>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <div class="empty-state-title">Henüz izin kaydınız bulunmuyor</div>
                    <div class="empty-state-message">Yeni bir izin talebi oluşturmak için yukarıdaki butonu kullanın</div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Create Leave Modal -->
@await Html.PartialAsync("_CreateLeaveModal")

@section Scripts {
    <script src="~/js/leaves.js"></script>
}

